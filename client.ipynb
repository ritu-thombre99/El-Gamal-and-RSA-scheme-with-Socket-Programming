   "source": [
    "import socket\n",
    "import numpy as np\n",
    "import gmpy2\n",
    "from gmpy2 import powmod,mpz,isqrt,invert\n",
    "import pyecm\n",
    "from el_gamal import generate_keys,get_blocks,format_plain_text,format_decrypted_plain_text,encrypt,decrypt"
    "# from rsa import generate_keys,get_blocks,format_plain_text,format_decrypted_plain_text,encrypt,decrypt"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "# <a id='connection'>1. Connecting Client and Server</a>\n",
    "<a href='#index'>Go back to top</a>"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 14,
   "metadata": {},
   "outputs": [],
   "source": [
    "host = 'localhost'    \n",
    "port = 12345                   # The same port as used by the server\n",
    "s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)\n",
    "s.connect((host, port))"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "# <a id='client_keys'>2. Generating Client Keys</a>\n",
    "<a href='#index'>Go back to top</a>"
   ]
  },
  {
   "cell_type": "code",
